<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="wildmonsters.monsterwiki">

    <application
        android:allowBackup="true"
        android:icon="@drawable/mlw_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/mlw_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".details_Activity"
            android:parentActivityName="wildmonsters.monsterwiki.MainActivity" />
        <!-- Parent activity meta-data to support API level 4+ -->
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="wildmonsters.monsterwiki.MainActivity" />
        <activity android:name=".MainActivity"></activity>
    </application>

</manifest>